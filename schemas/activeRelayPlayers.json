{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "array",
    "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
            "teamId": { "type": "string" },
            "players": {
                "type": "array",
                "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "talentId": { "type": "string" },
                        "index": { "type": "number" }
                    },
                    "required": ["talentId", "index"]
                }
            }
        },
        "required": ["teamId", "players"]
    },
    "default": []
}
