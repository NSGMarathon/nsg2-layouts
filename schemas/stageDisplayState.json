{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "mode": {
            "type": "string",
            "enum": ["PROGRAM", "PREVIEW"]
        },
        "showPlacementHelpers": { "type": "boolean" },
        "message": {
            "type": "object",
            "additionalProperties": false,
            "required": ["visible", "mode", "text", "color"],
            "properties": {
                "visible": { "type": "boolean" },
                "mode": {
                    "type": "string",
                    "enum": ["QUICK", "GENTLE"]
                },
                "color": {
                    "type": "string",
                    "enum": ["YELLOW", "RED", "GRAY"]
                },
                "text": { "type": "string" }
            }
        }
    },
    "required": ["mode", "showPlacementHelpers", "message"],
    "default": {
        "mode": "PROGRAM",
        "showPlacementHelpers": true,
        "message": {
            "visible": false,
            "mode": "GENTLE",
            "color": "GRAY",
            "text": "Good morning!"
        }
    }
}
