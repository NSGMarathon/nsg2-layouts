{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "required": ["connectionState", "players", "board"],
    "properties": {
        "connectionState": {
            "type": "string",
            "enum": ["NOT_CONNECTED", "CONNECTING", "CONNECTED", "ERROR"]
        },
        "players": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["id", "name", "color", "goalCount"],
                "properties": {
                    "id": { "type": "string" },
                    "name": { "type": "string" },
                    "color": { "type": "string" },
                    "goalCount": { "type": "number" }
                }
            }
        },
        "board": {
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["id", "goal", "completedByPlayers"],
                    "properties": {
                        "id": { "type": "string" },
                        "goal": { "type": "string" },
                        "description": { "type": ["string", "null"] },
                        "completedByPlayers": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "default": {
        "connectionState": "NOT_CONNECTED",
        "players": [],
        "board": []
    }
}
