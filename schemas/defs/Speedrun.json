{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "id": { "type": "string" },
        "externalId": { "type": ["string", "null"] },
        "title": { "type": "string" },
        "type": {
            "type": "string",
            "enum": ["SPEEDRUN"]
        },
        "twitchCategory": {
            "anyOf": [
                { "type": "null" },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "name": { "type": "string" },
                        "id": { "type": "string" },
                        "igdbUrl": { "type": "string" }
                    },
                    "required": ["name", "id"]
                }
            ]
        },
        "system": { "type": ["string", "null"] },
        "releaseYear": { "type": ["string", "null"] },
        "category": { "type": ["string", "null"] },
        "estimate": { "type": "string" },
        "setupTime": { "type": ["string", "null"] },
        "scheduledStartTime": { "type": "string" },
        "timerStartTime": { "type": ["string", "null"] },
        "firstGameplayTransitionTime": { "type": ["string", "null"] },
        "relay": { "type": ["boolean", "null"] },
        "emulated": { "type": ["boolean", "null"] },
        "layout": { "type": ["string", "null"] },
        "timerMode": {
            "type": "string",
            "enum": ["TIMER_COUNTUP", "METRIC_TIMER_COUNTUP"],
            "default": "TIMER_COUNTUP"
        },
        "videoFile": {
            "anyOf": [
                {
                    "type": "null"
                },
                {
                    "allOf": [
                        {
                            "$ref": "./VideoFile.json"
                        },
                        {
                            "type": "object",
                            "required": ["timerStartTime", "timerStopTime"],
                            "properties": {
                                "timerStartTime": { "type": "string" },
                                "timerStopTime": { "type": "string" }
                            }
                        }
                    ]
                }
            ]
        },
        "teams": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "id": { "type": "string" },
                    "name": { "type": "string" },
                    "playerIds": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "id": { "type": "string" },
                                "externalId": { "type": ["string", "null"] }
                            },
                            "required": ["id"]
                        }
                    }
                },
                "required": ["id", "playerIds"]
            }
        },
        "commentatorIds": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "id": { "type": "string" },
                    "externalId": { "type": ["string", "null"] }
                },
                "required": ["id"]
            }
        }
    },
    "required": ["id", "title", "type", "estimate", "scheduledStartTime", "teams", "commentatorIds", "timerMode"]
}
